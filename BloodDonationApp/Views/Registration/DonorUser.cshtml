@model BloodDonationApp.Models.RegistrationMV
@{
    ViewBag.Title = "Donor Registration";
}


<div class="appointment-form-wrapper theme-custom-box-shadow text-center clearfix wow zoomIn">
    <h3 class="join-heading join-heading-alt">Donor Registration Form</h3>
    @using (Html.BeginForm("DonorUser", "Registration", FormMethod.Post, new { @class = "appoinment-form" }))
    {
        @Html.AntiForgeryToken()


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.UserTypeID)
        @Html.HiddenFor(model => model.User.UserID)
        @Html.HiddenFor(model => model.User.UserName)
        @Html.HiddenFor(model => model.User.Password)
        @Html.HiddenFor(model => model.User.EmailAddress)
        @Html.HiddenFor(model => model.User.AccountStatus)
        @Html.HiddenFor(model => model.User.AccountStatusID)
        @Html.HiddenFor(model => model.User.Description)

        <div class="form-group col-md-6">
            @Html.EditorFor(model => model.Donor.FullName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter FullName", @type = "text" } })
            @Html.ValidationMessageFor(model => model.Donor.FullName, "", new { @class = "text-danger" })

        </div>

        <div class="form-group col-md-6">
            @Html.EditorFor(model => model.Donor.ContactNo, new { htmlAttributes = new { @class = "form-control", @placeholder = "Contact No" } })
            @Html.ValidationMessageFor(model => model.Donor.ContactNo, "", new { @class = "text-danger" })


        </div>
        <div class="form-group col-md-6">
            @Html.EditorFor(model => model.Donor.CNIC, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter CNIC", @type = "number" } })
            @Html.ValidationMessageFor(model => model.Donor.CNIC, "", new { @class = "text-danger" })

        </div>
        <div class="form-group col-md-6">
            <div class="select-style">
                @Html.DropDownList("CityID", null, "--Select City--", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CityID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group col-md-6">
            @Html.EditorFor(model => model.Donor.LastDonationDate, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Last Donation date" } })
            @Html.ValidationMessageFor(model => model.Donor.LastDonationDate, "", new { @class = "text-danger" })

        </div>
        <div class="form-group col-md-6">
            @Html.EditorFor(model => model.Donor.Location, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Address", @type = "text" } })
            @Html.ValidationMessageFor(model => model.Donor.Location, "", new { @class = "text-danger" })

        </div>

        <div class="form-group col-md-6">
            <div class="select-style">
                @Html.DropDownList("BloodGroupID", null, "--Select BloodGroup--", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.BloodGroupID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="select-style">
                @Html.DropDownList("GenderID", null, "--Select Gender--", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.GenderID, "", new { @class = "text-danger" })
            </div>
        </div>




        <div class="form-group col-md-12 col-sm-12 col-xs-12">
            <button id="btn_submit" class="btn btn-theme" type="submit">Submit</button>
        </div>

    }

</div>