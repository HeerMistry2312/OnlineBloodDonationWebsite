@model BloodDonationApp.Models.RequestTypeMV

@{
    ViewBag.Title = "Edit Request Type";
}

<div class="col-md-6">
    <div class="contact-form-block">
        <h2 class="contact-title">Edit Request Type</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

           
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.RequestTypeID)

    <div class="form-group">
        Update Request Name:
        @Html.EditorFor(model => model.RequestType, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.RequestType, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">

        <input type="submit" style="float:right;" value="Update" class="btn btn-theme" />
        @Html.ActionLink("Back", "AllRequestTypes", null, new { @class = "btn btn-theme-invert" })

    </div>
        }

       </div>
</div>